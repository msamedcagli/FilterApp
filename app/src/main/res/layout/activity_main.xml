<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Üst bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="76dp"
        android:orientation="horizontal"
        android:background="#ffff00"
        android:padding="8dp"
        android:gravity="center_vertical|end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/selectImageFab"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_gallery"
            android:contentDescription="Galeri"
            app:tint="#000000"
            android:background="@drawable/round_button_bg"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true" />

        <ImageView
            android:id="@+id/saveFab"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:src="@android:drawable/ic_menu_save"
            android:contentDescription="Kaydet"
            app:tint="#000000"
            android:background="@drawable/round_button_bg"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Görüntü -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- Alt bar -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="76dp"
        android:background="#ffff00"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/filterFab"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@android:drawable/ic_menu_camera"
            android:contentDescription="Filtre Uygula"
            app:tint="#000000"
            android:background="@drawable/round_button_bg"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true" />

        <ImageView
            android:id="@+id/faceFilterFab"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:src="@android:drawable/ic_menu_view"
            android:contentDescription="Yüz Filtresi Uygula"
            app:tint="#000000"
            android:background="@drawable/round_button_bg"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
